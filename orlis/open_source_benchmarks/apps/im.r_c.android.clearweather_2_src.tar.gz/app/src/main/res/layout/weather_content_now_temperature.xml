<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_now_temperature"
        style="@style/NowTemperatureTextView"
        android:layout_centerHorizontal="true"
        android:text="17"/>

    <TextView
        android:id="@+id/tv_now_temperature_unit"
        style="@style/NowTemperatureTextView"
        android:layout_toEndOf="@+id/tv_now_temperature"
        android:layout_toRightOf="@+id/tv_now_temperature"
        android:text="@string/degree_unit"/>
</RelativeLayout>

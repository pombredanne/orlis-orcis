<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="@drawable/locker"
tools:context="peanutencryption.peanutencryption.Change_Password_Activity">

<android.support.v7.widget.CardView
    android:id="@+id/CardView_Change_Password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Title_Change_Passord"
            android:id="@+id/title_change_Password_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_Password_Old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/initialize_text"
            android:layout_marginTop="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Change_Password_Hint_old"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutCP_Password_First"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textInputLayout_Password_Old">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Initialization_Password_Hint"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutCP_Password_Second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayoutCP_Password_First"
            android:layout_alignParentLeft="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Initialization_Password_Hint_2"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Initialization_Button_Text"
            android:id="@+id/Change_Password_ConfirmBtn"
            android:background="@color/ColorPrimary"
            android:textColor="@color/White"
            android:onClick="clickButtonCPConfirm"
            android:nestedScrollingEnabled="false"
            android:layout_below="@+id/textInputLayoutCP_Password_Second"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Giggity" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/Theme.Giggity.ActionBar</item>
	</style>

	<style name="Theme.Giggity.NoShadow" parent="@style/Theme.Giggity">
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="Theme.Giggity.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/primary</item>
		<item name="android:titleTextStyle">@style/Theme.Giggity.ActionBar.Text</item>
		<item name="android:logo">@android:color/transparent</item>
	</style>

	<style name="Theme.Giggity.ActionBar.Text">
		<item name="android:textColor">#ffffffff</item>
	</style>

	<style name="BurgerMenuItem" parent="@android:style/TextAppearance">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:padding">8dp</item>
	</style>
	<style name="BurgerMenuHeader" parent="BurgerMenuItem">
		<item name="android:background">@color/primary</item>
		<item name="android:textColor">@color/light_text</item>
	</style>
	<style name="BurgerMenuSeparator">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@color/light_dark</item>
	</style>
</resources>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pulpdust.lesserpad"
    android:installLocation="auto"
    android:versionCode="37"
    android:versionName="0.94b" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        
         android:allowBackup="true">
        <activity
            android:name=".LesserPadListActivity"
            android:label="@string/title_activity_lesser_pad_list"
            android:launchMode="singleTop"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LesserPadActivity"
            android:label="@string/title_activity_lesser_pad"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.Dialog.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:mimeType="text/plain"
                    android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:mimeType="text/plain"
                    android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.pulpdust.lesserpad.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.pulpdust.lesserpad.NEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".LesserPadPrefs"
            android:label="@string/title_activity_lesser_pad_prefs" >
        </activity>
        <activity
            android:name=".CategoryEditor"
            android:label="@string/title_activity_category_editor"
            android:theme="@style/AppTheme.Dialog.Dark" >
        </activity>
        <activity
            android:name=".ProtectActivity"
            android:label="@string/dialog_protect"
            android:theme="@style/AppTheme.Dialog.Dark"
            android:windowSoftInputMode="stateVisible" >
        </activity>
    </application>

</manifest>
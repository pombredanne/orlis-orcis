<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ListPreference
		android:key="dict"
		android:title="@string/pref_dict"
		android:summary="@string/pref_dict_summary"
		android:entries="@array/dict_choices_entries"
		android:entryValues="@array/dict_choices_entryvalues"
		android:dialogTitle="@string/pref_dict_dialog"
	/>

	<ListPreference
		android:key="boardSize"
		android:title="@string/pref_boardSize"
		android:summary="@string/pref_boardSize_summary"
		android:entries="@array/board_size_choices_entries"
		android:entryValues="@array/board_size_choices_entryvalues"
		android:dialogTitle="@string/pref_boardSize_dialog"
	/>

	<ListPreference
		android:key="maxTimeRemaining"
		android:title="@string/pref_timeLimit"
		android:summary="@string/pref_timeLimit_summary"
		android:entries="@array/time_limit_choices_entries"
		android:entryValues="@array/time_limit_choices_entryvalues"
		android:dialogTitle="@string/pref_timeLimit_dialog"
	/>

	<CheckBoxPreference
		android:key="soundsEnabled"
		android:title="@string/pref_sounds"
		android:summary="@string/pref_sounds_summary"
	/>


</PreferenceScreen>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.hnit.babyname"
    android:installLocation="auto"
    android:versionCode="3"
    android:versionName="0.3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="fr.hnit.babyname.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.hnit.babyname.EditActivity"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.hnit.babyname.MainActivity" />
        </activity>
        <activity
            android:name="fr.hnit.babyname.FindActivity"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.hnit.babyname.MainActivity" />
        </activity>
        <activity
            android:name="fr.hnit.babyname.SettingsActivity"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.hnit.babyname.MainActivity" />
        </activity>
        <activity
            android:name="fr.hnit.babyname.BrowseActivity"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.hnit.babyname.MainActivity" />
        </activity>
        <activity android:name=".AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.hnit.babyname.MainActivity" />
        </activity>
    </application>

</manifest>

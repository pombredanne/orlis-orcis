<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deepzoom_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="-6dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:elevation="17dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <uk.co.senab.photoview.PhotoView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/deepzoom_photoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/deepzoom_media_play_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/ic_play_circle_outline_black_48dp"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>

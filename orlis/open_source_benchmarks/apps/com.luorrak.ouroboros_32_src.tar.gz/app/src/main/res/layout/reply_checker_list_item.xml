<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reply_checker_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="?attr/card_background"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/reply_checker_text_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reply_checker_thread_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="/test/12345"/>
            <TextView
                android:id="@+id/reply_checker_sub_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:text="SUBJECT"/>
            <TextView
                android:id="@+id/reply_checker_com_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:maxLines="6"
                android:text="COMMENT"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/reply_checker_mark_as_read_button"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="?attr/reply_checker_read_icon"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"/>
        <View
            android:id="@+id/reply_checker_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/reply_checker_text_container"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="?attr/divider_color" />
        <TextView
            android:id="@+id/reply_checker_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reply_checker_divider"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:text="1000 Replies"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
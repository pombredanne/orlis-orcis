<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Appearance">
        <ListPreference
            android:key="theme_preference"
            android:title="Theme"
            android:summary="Change Theme: Requires Restart"
            android:entries="@array/themeNames"
            android:entryValues="@array/themeValues"
            android:dialogTitle="Set Theme"
            android:defaultValue="0"/>

        <EditTextPreference
            android:key="catalog_grid_columns"
            android:title="Catalog Grid Columns"
            android:summary="Number of Columns in Grid Layout"
            android:dialogTitle="Enter Columns"
            android:inputType="number"
            android:defaultValue="3"/>

        <ListPreference
            android:key="image_options"
            android:title="Load Images"
            android:summary="Automaticly load images"
            android:entries="@array/imageOptions"
            android:entryValues="@array/imageValues"
            android:dialogTitle="Image Loading Preference"
            android:defaultValue="1"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Posting">
        <EditTextPreference
            android:key="default_name"
            android:title="Name"
            android:summary="Default Name to be Used"
            android:dialogTitle="Enter name"
            android:inputType="text"
            android:defaultValue=""/>

        <EditTextPreference
            android:key="default_email"
            android:title="Email"
            android:summary="Default Email to be Used"
            android:dialogTitle="Enter email"
            android:inputType="text"
            android:defaultValue=""/>

        <EditTextPreference
            android:key="post_password"
            android:title="Password"
            android:summary="Password Used to Delete Posts"
            android:dialogTitle="Enter password"
            android:inputType="text"
            android:defaultValue=""/>
        </PreferenceCategory>
    <PreferenceCategory android:title="Miscellaneous">
        <CheckBoxPreference
            android:key="pref_reply_checker"
            android:title="Reply Checker Enabled"
            android:summary="Enable/Disable Periodic Checks for new replies"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/available_vouchers"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Vouchers"
        android:id="@+id/available_vouchers_label"
        android:layout_below="@+id/available_vouchers"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_alignRight="@+id/available_vouchers"
        android:layout_alignTop="@+id/available_vouchers" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/price"
        android:layout_below="@+id/available_vouchers"
        android:layout_centerHorizontal="true"
        android:text="12.51" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/price_label"
        android:layout_below="@+id/price"
    android:layout_centerHorizontal="true"
    android:layout_margin="15dp"
    android:layout_alignRight="@+id/price"
        android:layout_alignTop="@+id/price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result"
        android:id="@+id/show"
        android:layout_margin="25dp"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Customize your theme here. @android:style/Theme.Black.NoTitleBar -->
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>

    </style>

    <style name="BottomButton" parent="android:Widget">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <color name="apptheme_color">#f30000</color>

    <color name="RowGroupTextNormal">#fff0f0f0</color>
    <color name="RowGroupTextPlaying">#ffff0000</color>
    <color name="RowSongTextNormal">#ffffffff</color>
    <color name="RowSongTextDuration">#ffffffff</color>
    <color name="RowBackground">#88000000</color>
    <color name="RowGroupFolderBackground">#88353535</color>
    <color name="RowGroupFolderArtistBackground">#88000000</color>
    <color name="RowGroupArtistBackground">#88353535</color>
    <color name="RowGroupArtistAlbumBackground">#88000000</color>
    <color name="RowGroupTreeBackground">#88353535</color>
    <!-- todo
    <item "levelOffset"">15</item>
    fonttype: bold, italic, regular...
    rightoffset
    -->

    <style name="SeekBarAppTheme" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/seekbar_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="PreferenceTheme" parent="">
        <!--
        do not work on 2.3, works on 4.1
        todo: make it work everywhere
        -->
        <item name="android:textColorSecondary">@color/apptheme_color</item>
    </style>


</resources>

<resources>

    <!-- colored themes -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_blue_700</item>
        <item name="colorPrimaryDark">@color/material_blue_800</item>
        <item name="colorAccent">@color/accent_material_light</item>

        <item name="textSecondaryDark">@color/textSecondaryDark</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="chipDrawable">@drawable/chip_light</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <item name="android:spinnerDropDownItemStyle">
            @style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar
        </item>
        <item name="actionModeShareDrawable">@drawable/ic_share_variant_white_24dp</item>
        <item name="scrollButtonStyle">
            @style/AppTheme.ScrollButtonStyle
        </item>
        <item name="popupTheme">@style/AppTheme.PopupTheme.Light</item>
        <item name="toolbarTheme">@style/AppTheme.ToolbarTheme</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/accent_material_light</item>

        <item name="textSecondaryDark">@color/textSecondaryDark</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="chipDrawable">@drawable/chip</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <item name="android:spinnerDropDownItemStyle">
            @style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar
        </item>
        <item name="actionModeShareDrawable">@drawable/ic_share_variant_white_24dp</item>
        <item name="scrollButtonStyle">
            @style/AppTheme.ScrollButtonStyle
        </item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="toolbarTheme">@style/AppTheme.ToolbarTheme</item>

    </style>

    <style name="AppTheme.ImageViewActivity.Base" parent="AppTheme">
        <item name="toolbarTheme">@style/AppTheme.ImageViewActivity.ToolbarTheme</item>
    </style>

    <style name="AppTheme.ImageViewActivity" parent="AppTheme.ImageViewActivity.Base"></style>

    <style name="AppTheme.ImageViewActivity.ToolbarTheme" parent="AppTheme.ToolbarTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- common styles -->
    <style name="AppTheme.ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>

    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.AppCompat" />

    <style name="AppTheme.PopupTheme.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/md_background_color</item>
    </style>


    <style name="AppTheme.ScrollButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:scaleType">center</item>
    </style>


    <style name="AppTheme.ImageListItem">
        <item name="android:maxWidth">384dp</item>
        <item name="android:layout_height">192dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>


    <!-- Login form has special style -->
    <style name="AppTheme.LoginForm.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_blue_700</item>
        <item name="colorPrimaryDark">@color/material_blue_800</item>
        <item name="colorAccent">@color/accent_material_light</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.LoginForm" parent="AppTheme.LoginForm.Base" />
</resources>

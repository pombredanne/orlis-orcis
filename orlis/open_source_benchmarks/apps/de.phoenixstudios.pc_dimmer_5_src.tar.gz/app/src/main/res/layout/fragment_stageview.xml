<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.phoenixstudios.pc_dimmer.Controlpanel">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stageview_refresh"
            android:id="@+id/refreshstageviewbtn" />

        <de.phoenixstudios.pc_dimmer.ZoomableImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/stageviewimage"
            android:layout_below="@+id/refreshstageviewbtn" />
    </RelativeLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.easwareapps.transparentwidget.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <Switch
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transparent_widget"
            android:textSize="18dp"
            android:id="@+id/toggle_switch" />

        <TextView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_us"
            android:textSize="18dp"
            android:onClick="redirectToMarket" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/refer"
            android:layout_margin="16dp"
            android:textSize="18dp"
            android:onClick="shareApp" />

        <TextView
            android:id="@+id/disable_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uninstall"
            android:layout_margin="16dp"
            android:textSize="18dp"
            android:onClick="uninstallApp" />


    </LinearLayout>

</LinearLayout>

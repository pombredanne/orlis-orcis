<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/cream">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/header2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="134dp"
            android:layout_height="63dp"
            android:id="@+id/button1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:onClick="selectUE4Blog"
            android:background="@drawable/button_ueblog2"
            android:visibility="invisible"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="134dp"
            android:layout_height="63dp"
            android:id="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/button1"
            android:layout_marginBottom="13dp"
            android:layout_alignParentLeft="true"
            android:onClick="selectUT5Blog"
            android:background="@drawable/button_utblog2"
            android:visibility="invisible"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="134dp"
            android:layout_height="63dp"
            android:id="@+id/button3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:onClick="selectUE4Marketplace"
            android:background="@drawable/button_market2"
            android:visibility="invisible"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="134dp"
            android:layout_height="63dp"
            android:id="@+id/button4"
            android:layout_above="@id/button3"
            android:layout_marginBottom="13dp"
            android:layout_alignParentRight="true"
            android:onClick="selectUTLiveStream"
            android:background="@drawable/button_stream2"
            android:visibility="invisible"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="134dp"
            android:layout_height="63dp"
            android:id="@+id/button5"
            android:layout_below="@id/button3"
            android:layout_marginTop="13dp"
            android:layout_alignParentLeft="true"
            android:onClick="showAbout"
            android:background="@drawable/button_about2"
            android:visibility="invisible"/>

    <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/progress"/>

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="134dp"
                android:layout_height="63dp"
                android:id="@+id/retryButton"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="retryFetch"
                android:background="@drawable/button_retry2"
                android:visibility="invisible"/>

        <TextView
                android:text="@string/app_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wine"
                android:textSize="16sp"
                android:layout_above="@id/progress"
                android:layout_marginBottom="13dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/progresstext"
                />
    </RelativeLayout>

    <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">

        <RadioButton
                android:id="@+id/radio0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/theme1"
                android:textColor="@color/wine"/>

        <RadioButton
                android:id="@+id/radio1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/theme2"
                android:textColor="@color/wine"/>

        <RadioButton
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/theme3"
                android:textColor="@color/wine"/>
    </RadioGroup>

</RelativeLayout>

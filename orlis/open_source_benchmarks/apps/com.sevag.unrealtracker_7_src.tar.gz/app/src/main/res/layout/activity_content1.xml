<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/lightgrey">

    <ImageView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:src="@drawable/caption_ueblog1"
            android:visibility="invisible"/>
    <ImageView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:src="@drawable/caption_utblog1"
            android:visibility="invisible"/>
    <ImageView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:src="@drawable/caption_market1"
            android:visibility="invisible"/>
    <ImageView
            android:id="@+id/title4"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="23dp"
            android:src="@drawable/caption_stream1"
            android:visibility="invisible"/>
    <ImageView
            android:id="@+id/title5"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:src="@drawable/caption_about1"
            android:visibility="invisible"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brightblue"
            android:textSize="16sp"
            android:layout_below="@id/title1" android:id="@+id/subtitle"
            android:layout_centerHorizontal="true"/>

    <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/subtitle"
            android:layout_marginTop="33dp">
        <TextView android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_weight="1.0"
                  android:text=""
                  android:textColor="@color/brightblue"
                  android:textSize="16sp"
                  android:id="@+id/mainTextView"
                  android:background="@drawable/custom_background1"
                />
    </ScrollView>

</RelativeLayout>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <shape>
       <corners android:radius="0dip" />
       <gradient
        android:startColor="@color/pg_background_start"
        android:centerColor="@color/pg_background_center"
        android:centerY="0.50"
        android:endColor="#ff2A2D30"
        android:angle="270" />
    </shape>
  </item>
  <item android:id="@android:id/secondaryProgress">
    <clip>
       <shape>
        <corners android:radius="0dip" />
        <gradient
             android:startColor="@color/pg_sec_start"
             android:endColor="@color/pg_sec_end"
             android:angle="90" />
       </shape>
    </clip>
  </item>
  <item android:id="@android:id/progress">
    <clip>
       <shape>
        <corners android:radius="0dip" />
        <gradient
             android:startColor="@color/pg_start"
             android:endColor="@color/pg_end"
             android:angle="90" />
       </shape>
    </clip>
  </item>
</layer-list>
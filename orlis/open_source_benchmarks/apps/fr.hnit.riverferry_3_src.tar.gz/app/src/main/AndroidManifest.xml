<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.hnit.riverferry">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="fr.hnit.riverferry.NextDeparture">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.hnit.riverferry.HelpActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="fr.hnit.riverferry.NextDeparture" />
        </activity>

        <activity android:name="fr.hnit.riverferry.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.hnit.riverferry.NextDeparture" />
        </activity>
    </application>

</manifest>
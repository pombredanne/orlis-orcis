<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    style="@style/ListItem">

   	<ImageView android:id="@+id/list_item_document_icon"
   	    android:contentDescription="@string/title_document_list"
   	    android:src="@drawable/document"
        android:layout_height="@dimen/icon_size_small"
        android:layout_width="@dimen/icon_size_small"
	    android:layout_gravity="center_vertical" />
   	
	<TextView android:id="@+id/list_item_document_text"
        tools:text="Document content goes here Document content goes here Document content goes here Document content goes here Document content goes here Document content goes here Document content goes here"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/standard_padding_xsmall"
        android:singleLine="false"
        android:lines="@integer/document_lines"
        android:ellipsize="end"
	    android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_medium" />
			
</LinearLayout>



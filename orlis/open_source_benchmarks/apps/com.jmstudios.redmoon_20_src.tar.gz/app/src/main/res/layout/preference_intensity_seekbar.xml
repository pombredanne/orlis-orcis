<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:minHeight="@dimen/seekbar_preference_min_height"
             android:gravity="center_vertical"
             android:paddingLeft="@dimen/preference_padding_start"
             android:paddingStart="@dimen/preference_padding_start"
             android:paddingRight="@dimen/preference_padding_end"
             android:paddingEnd="@dimen/preference_padding_end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >

          <TextView
              android:id="@+id/intensity_preference_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:text="@string/shades_intensity_level"
              style="@style/PreferenceTextStyle" />

          <TextView
              android:id="@+id/current_intensity_level"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@id/intensity_preference_title"
              android:layout_alignParentBottom="true"
              android:paddingStart="6dp"
              android:paddingEnd="6dp"
              style="@style/PreferenceSecundaryTextStyle" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/moon_icon_intensity"
                android:layout_gravity="center_vertical|start"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/moon_icon" />

            <SeekBar
                android:id="@+id/intensity_level_seekbar"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.secuso.privacyfriendlydicer" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.secuso.privacyfriendlydicer.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlydicer.PreferencesActivity"
            android:parentActivityName="org.secuso.privacyfriendlydicer.MainActivity">
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlydicer.AboutActivity"
            android:parentActivityName="org.secuso.privacyfriendlydicer.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>

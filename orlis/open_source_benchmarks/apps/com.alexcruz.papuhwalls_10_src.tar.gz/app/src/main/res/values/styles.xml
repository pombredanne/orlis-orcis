<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/statusbar_color</item>
        <item name="colorAccent">@color/accent</item>
        <item name="md_background_color">@color/md_background_color</item>
        <item name="md_dark_theme">true</item>
        <item name="md_title_color">@color/md_title_color</item>
        <item name="md_content_color">@color/md_content_color</item>
        <item name="md_positive_color">@color/md_positive_color</item>
        <item name="md_neutral_color">@color/md_neutral_color</item>
        <item name="md_negative_color">@color/md_negative_color</item>
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
        <item name="windowBackground">@color/transparent</item>
        <item name="windowIsTranslucent">true</item>
        <item name="windowContentOverlay">@null</item>
        <item name="backgroundDimEnabled">true</item>
        <item name="windowTranslucentStatus">false</item>
        <item name="windowTranslucentNavigation">false</item>
        <item name="windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorForeground">@color/bright_foreground_material_dark</item>
        <item name="android:colorBackground">@color/background_floating_material_dark</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:panelColorBackground">@color/background_floating_material_dark</item>
    </style>

    <style name="Settings" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/settings_title</item>
        <item name="android:textColorSecondary">@color/settings_summary</item>
        <item name="android:titleTextColor">@color/settings_title</item>
        <item name="android:textColorPrimary">@color/settings_title</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowBackground">@color/transparent</item>
        <item name="windowIsTranslucent">true</item>
        <item name="windowContentOverlay">@null</item>
        <item name="backgroundDimEnabled">true</item>
        <item name="windowTranslucentStatus">false</item>
        <item name="windowTranslucentNavigation">false</item>
        <item name="windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorForeground">@color/bright_foreground_material_dark</item>
        <item name="android:colorBackground">@color/background_floating_material_dark</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:panelColorBackground">@color/background_floating_material_dark</item>
    </style>

    <style name="DarkMaterialDrawerIcons">
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon_light</item>
    </style>

    <style name="CustomActivityOnCrashTheme" parent="AppTheme">
    </style>

    <style name="AppTheme.BaseDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="FabLabels">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/city_list_group_item_height"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/city_list_group_item_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
        style="@style/primaryText"
        tools:text="Country Name"
        />

    <ImageView android:id="@+id/icon"
        android:layout_width="@dimen/list_item_icon_width"
        android:layout_height="@dimen/list_item_icon_height"
        android:elevation="@dimen/list_item_icon_elevation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/msg_country_flag"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_item_padding_left_right"
        android:layout_marginRight="@dimen/list_item_padding_left_right"
        android:background="@drawable/no_country"
        />
</RelativeLayout>
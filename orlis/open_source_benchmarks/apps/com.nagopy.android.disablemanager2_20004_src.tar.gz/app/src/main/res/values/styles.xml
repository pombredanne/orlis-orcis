<resources>

    <color name="primary_1">#B9DFB9</color>
    <color name="primary_2">#8AC78A</color>
    <color name="primary_3">#5BA75B</color>
    <color name="primary_4">#358935</color>
    <color name="primary_5">#1A6C1A</color>
    <color name="primary_1_translucent">#7FB9DFB9</color>
    <color name="primary_2_translucent">#7F8AC78A</color>
    <color name="primary_3_translucent">#7F5BA75B</color>
    <color name="primary_4_translucent">#7F358935</color>
    <color name="primary_5_translucent">#7F1A6C1A</color>

    <color name="backgroundColor">@color/background_material_light</color>
    <color name="textColor">@color/primary_text_default_material_light</color>
    <color name="textColorSecondary">@color/secondary_text_default_material_light</color>
    <color name="textColorTertiary">#60000000</color>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/primary_5</item>
        <item name="colorPrimary">@color/primary_4</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/primary_4</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fast_scroll_thumb</item>
        <item name="android:fastScrollTrackDrawable">@drawable/fast_scroll_track_drawable</item>
        <item name="android:scrollbarThumbVertical">@drawable/fast_scroll_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/fast_scroll_track_drawable</item>

        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextAppearance.AppTheme.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.ListView" />

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textColor">@color/tab_indicator_text_color</item>
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:dividerPadding">@dimen/unit_4</item>
        <item name="android:showDividers">none</item>
        <item name="android:paddingLeft">@dimen/unit_4</item>
        <item name="android:paddingRight">@dimen/unit_4</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">@dimen/unit_4</item>
    </style>

</resources>

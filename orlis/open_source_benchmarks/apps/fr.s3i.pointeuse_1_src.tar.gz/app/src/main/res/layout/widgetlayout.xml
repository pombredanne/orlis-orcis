<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="214dip"
    android:layout_height="54dip"
    android:background="@drawable/widgetborder">

    <ImageView
        android:layout_width="50dip"
        android:src="@drawable/logo_s3i"
        android:layout_height="wrap_content" />

    <TextView
        android:background="#35FFFFFF"
        android:id="@+id/monTextWidget"
        android:text="@string/debuter"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_height="fill_parent"
        android:layout_width="95dip" />


    <Button
        android:background="@drawable/bouton123"
        android:id="@+id/monbouttonwidget"
        android:text="@string/pointer"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_width="65dip"
        android:layout_height="fill_parent" />

</LinearLayout>

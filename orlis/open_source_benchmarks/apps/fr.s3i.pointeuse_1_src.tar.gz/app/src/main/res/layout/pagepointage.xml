<LinearLayout android:id="@+id/RLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/encours"
        android:text="@string/pointagerapide"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_gravity="top"
        android:layout_weight="0"></TextView>

    <Button
        android:background="@drawable/bouton123"
        android:id="@+id/btnPointer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pointagerapide"
        android:textSize="16sp"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_gravity="top"
        android:layout_weight="0"></Button>

    <Button
        android:background="@drawable/bouton123"
        android:id="@+id/btnAddPointage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/inserer"
        android:textSize="16sp"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_gravity="top"
        android:layout_weight="0"></Button>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgS3i"
            android:layout_width="wrap_content"
            android:src="@drawable/bandeau_s3i"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </FrameLayout>

</LinearLayout>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="city"
        android:title="@string/setting_city"
        android:defaultValue="Dresden"/>
    <ListPreference
        android:key="sorting"
        android:title="@string/setting_sorting"
        android:defaultValue="@string/setting_sorting_default"/>
    <CheckBoxPreference
        android:key="hide_closed"
        android:title="@string/setting_hide_closed"
        android:defaultValue="true"/>
    <CheckBoxPreference
        android:key="hide_nodata"
        android:title="@string/setting_hide_nodata"
        android:defaultValue="false"/>
    <CheckBoxPreference
        android:key="hide_full"
        android:title="@string/setting_hide_full"
        android:defaultValue="true"/>
    <CheckBoxPreference
        android:key="active_support"
        android:title="@string/active_support"
        android:defaultValue="true" />
    <Preference
        android:key="reset"
        android:title="@string/setting_reset" />
</PreferenceScreen>

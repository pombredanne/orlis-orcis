<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/row_more_apps_background">

    <TextView
        android:id="@+id/row_more_apps_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/row_more_apps_title_background"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:paddingLeft="@dimen/dialog_more_app_app_name_padding"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        tools:text="My other project" />

    <ImageView
        android:id="@+id/row_more_apps_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dialog_more_app_logo_padding"
        tools:src="@drawable/ic_chase_whisply" />

</RelativeLayout>
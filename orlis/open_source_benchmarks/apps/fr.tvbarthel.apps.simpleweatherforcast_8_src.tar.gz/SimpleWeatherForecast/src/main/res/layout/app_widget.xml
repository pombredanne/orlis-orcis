<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/app_widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_widget_background"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/app_widget_divider_height"
        android:drawSelectorOnTop="true"
        android:listSelector="@drawable/list_selector_app_widget" />

    <ProgressBar
        android:id="@+id/app_widget_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


</FrameLayout>


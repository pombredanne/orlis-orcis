<resources>
    <attr name="themeName" format="string"/>
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="themeName">light</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="themeName">dark</item>
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_darkest</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="themeName">light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeDark.NoActionBar">
        <item name="themeName">dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/generalColor</item>
        <item name="android:colorPrimary">@color/generalColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/generalColor</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/fabButtonColor</item>
        <item name="android:colorAccent">@color/fabButtonColor</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="WakeupTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/generalColor</item>
    </style>

    <style name="AppTheme.Timepicker" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/fabButtonColor</item>
        <item name="android:colorAccent">@color/fabButtonColor</item>
        <item name="colorPrimary">@color/generalColor</item>
        <item name="android:colorPrimary">@color/generalColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/generalColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.rastating.droidbeard.ui.ExpandableImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/banner"
        android:background="#cccccc"
    />

    <RelativeLayout android:padding="10dp"
        android:visibility="gone"
        android:background="#f5fafa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/show_name"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#333333"
        />

        <TextView android:id="@+id/airs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#838383">
        </TextView>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/glyph_chevron_right_838383_64"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</LinearLayout>
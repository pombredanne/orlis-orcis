<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:useDefaultMargins="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addbackupitem_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/addbackupitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profile name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addbackupitem_source_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/addbackupitem_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Origin" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addbackupitem_destination_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/addbackupitem_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination" />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>

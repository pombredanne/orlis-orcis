<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="actionMenuTextColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="background">@color/dark</item>
    </style>

</resources>

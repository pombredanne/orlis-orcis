<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="@string/pref_key_device"
        android:summary="Device MODEL (BRAND)"
        android:title="@string/pref_current_device_title"
        />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_key_enable_notif"
        android:title="@string/pref_alarms_enabled_title"
        android:summary="@string/pref_alarms_enabled_summary"
        />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_key_exclude_weekends"
        android:title="@string/pref_excude_weekends_title"
        android:summary="@string/pref_excude_weekends_summary"
        />

    <it.mobimentum.dualsimwidget.preferences.TimePreference
        android:key="@string/pref_key_alarm_start"
        android:title="@string/pref_alarm_start_title"
        android:defaultValue="@string/pref_alarm_start_default"
        />
    <it.mobimentum.dualsimwidget.preferences.TimePreference
        android:key="@string/pref_key_alarm_end"
        android:title="@string/pref_alarm_end_title"
        android:defaultValue="@string/pref_alarm_end_default"
        />

</PreferenceScreen>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hiittimer.hiittimer"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <application
        android:name="org.hiittimer.HIITTimerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="org.hiittimer.services.CurrentTrainingService" />
        <service android:name="org.hiittimer.services.CurrentRoundService" />
        <activity
            android:name="org.hiittimer.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hiittimer.TrainingPlans"
            android:label="@string/title_activity_training_plans"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="org.hiittimer.CreateNewTrainingPlan"
            android:label="@string/title_activity_create_new_training_plan"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="org.hiittimer.CurrentTraining"
            android:label="@string/title_activity_current_training"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="org.hiittimer.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name="org.hiittimer.EditTrainingPlan"
            android:label="@string/title_activity_edit_training_plan" >
        </activity>
    </application>
</manifest>
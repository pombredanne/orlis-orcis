<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hiittimer.CreateNewTraining$PlaceholderFragment" >

    <EditText
        android:id="@+id/editTextTrainingPlanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/training_plan_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextGetReadyTimeInSeconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/training_plan_get_ready_time_in_seconds"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonAddNewRound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addNewRound"
        android:text="@string/add_new_round" />

    <TextView
        android:id="@+id/textViewRounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/rounds"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewRounds"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
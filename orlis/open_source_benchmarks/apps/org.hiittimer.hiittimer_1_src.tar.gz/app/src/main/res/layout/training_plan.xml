<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewTrainingPlanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/training_plan_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTrainingPlanPreTrainingCountdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/training_plan_get_ready_time_in_seconds" />

    <TextView
        android:id="@+id/textViewTrainingPlanRoundsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/training_plan_rounds_number" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewRoundNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/round_number"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewRoundWorkInSeconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/round_work_in_seconds" />

    <TextView
        android:id="@+id/textViewRoundRestInSeconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/round_rest_in_seconds" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView android:id="@+id/dbstatus" android:layout_width="fill_parent" android:layout_height="wrap_content"/>

    <LinearLayout
	android:id="@+id/horizontalLine"
	android:layout_width="fill_parent"
	android:layout_height="2dip"
	android:background="#A07070"/>

    <ListView android:id="@+id/dblist" android:layout_width="fill_parent" android:layout_height="fill_parent"
    	android:layout_weight="1"/>

	<LinearLayout
	android:id="@+id/horizontalLine"
	android:layout_width="fill_parent"
	android:layout_height="2dip"
	android:background="#A07070"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_map"
        android:textSize="24sp"
        android:text="@string/mapless"
        />

	<RelativeLayout
		android:id="@+id/db_map_rl"
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
    </RelativeLayout>

</LinearLayout>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">
    <PreferenceCategory
        android:key="@string/config_key_storage_category"
        android:title="@string/title_storage_category">
        <Preference
            android:key="@string/config_key_storage_warning"
            android:selectable="false"
            android:summary="@string/message_storage_warning"
            android:title="@string/message_warning" />

        <ListPreference
            android:key="@string/config_key_storage"
            android:title="@string/pref_storage" />

    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/config_key_misc_category"
        android:title="@string/title_misc_category">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/config_key_use_mathjax"
            android:summary="@string/pref_mathjax_summ"
            android:title="@string/pref_mathjax" />
    </PreferenceCategory>
</PreferenceScreen>